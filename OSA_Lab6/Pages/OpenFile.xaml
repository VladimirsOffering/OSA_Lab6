<Page x:Class="OSA_Lab6.Pages.OpenFile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OSA_Lab6.Pages"
      xmlns:viewmodels="clr-namespace:OSA_Lab6.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OpenFile"
      Background="Black"
      >
   
    <StackPanel VerticalAlignment="Center" >
        <TextBlock Text="{Binding InfoMsg}" Style="{StaticResource Title}" Foreground="White"></TextBlock>
        <Button Command="{Binding OpenFileCommand}" IsEnabled="{Binding IsEnabled}" Content="{Binding ButtonText}" HorizontalAlignment="Center" VerticalAlignment="Center"></Button>
    </StackPanel>
</Page>
